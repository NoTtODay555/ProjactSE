<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".padding.addexchange.AddExchange"
        android:orientation="vertical">

    <include layout="@layout/layout_padding"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            <LinearLayout
                    android:background="@drawable/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start">

                <ImageView
                        android:id="@+id/image1"
                        android:src="@drawable/icon_profile"
                        android:layout_margin="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                <ImageView
                        android:id="@+id/image2"
                        android:src="@drawable/icon_main"
                        android:layout_margin="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                <ImageView
                        android:id="@+id/image3"
                        android:layout_margin="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                <ImageView
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_camera_alt_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_file_upload_black_24dp"/>
            </LinearLayout>


<LinearLayout
        android:background="@drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Name : "
            android:textSize="18dp"/>
    <EditText
            android:id="@+id/et_name"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="18dp"
            tools:ignore="SpUsage"/>
</LinearLayout>




            <TextView
                    android:background="@drawable/text_sigein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Details"
                    android:textSize="20dp"/>



            <android.support.constraint.ConstraintLayout
                    android:gravity="center|start"
                    android:orientation="vertical"
                    android:background="@drawable/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- Good : "
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="32dp"
                        android:id="@+id/textView18"/>

                <EditText
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:id="@+id/good"
                        android:text="Secound hand"
                        app:layout_constraintStart_toEndOf="@+id/textView18"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- Defection : "
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView18"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="32dp"
                        android:id="@+id/textView19"/>

                <EditText
                        android:id="@+id/defect"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="there is a slight black mark"
                        app:layout_constraintStart_toEndOf="@+id/textView19"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/good"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- Size : "
                        app:layout_constraintTop_toBottomOf="@+id/textView19"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="32dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/textView20"/>

                <EditText
                        android:id="@+id/size"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Heigh about 25 cm"
                        app:layout_constraintStart_toEndOf="@+id/textView20"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/defect"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>



            <TextView
                    android:background="@drawable/text_sigein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Categories"
                    android:textSize="20dp"/>



            <android.support.constraint.ConstraintLayout
                    android:background="@drawable/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- "
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="32dp"
                        app:layout_constraintVertical_bias="0.0"
                        android:id="@+id/textView17"/>

                <EditText
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="other"
                        app:layout_constraintStart_toEndOf="@+id/textView17"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"/>
            </android.support.constraint.ConstraintLayout>


            <TextView
                    android:background="@drawable/text_sigein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Exchange Conditions"
                    android:textSize="20dp"/>



            <android.support.constraint.ConstraintLayout
                    android:background="@drawable/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Any"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="36dp"
                        android:id="@+id/checkBox2"/>

                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cetegories"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="36dp"
                        app:layout_constraintTop_toBottomOf="@+id/checkBox2"
                        android:id="@+id/checkBox3"/>

                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="36dp"
                        app:layout_constraintTop_toBottomOf="@+id/checkBox3"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/checkBox4"
                        app:layout_constraintVertical_bias="0.521"/>

                <EditText
                        android:background="@color/background"
                        android:hint="Cetegories"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/checkBox3"
                        android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="44dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        android:id="@+id/editText"/>

                <EditText
                        android:background="@color/background"
                        android:hint="Amoumt ..."
                        android:layout_width="181dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/editText"
                        app:layout_constraintStart_toEndOf="@+id/checkBox4"
                        android:layout_marginStart="16dp"
                        android:id="@+id/editText3"
                        app:layout_constraintEnd_toStartOf="@+id/textView21"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bath"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        android:id="@+id/textView21"
                        tools:ignore="MissingConstraints"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/editText"
                        app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>

            <TextView
                    android:background="@drawable/text_sigein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Agent"
                    android:textSize="20dp"/>



            <android.support.constraint.ConstraintLayout
                    android:background="@drawable/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:id="@+id/checkBox6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/checkBox5"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:id="@+id/checkBox5"
                        app:layout_constraintStart_toEndOf="@+id/checkBox6"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>



        </LinearLayout>
    </ScrollView>

</LinearLayout>