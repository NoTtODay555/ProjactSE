<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login.SigeIn">

    <include
            layout="@layout/layout_signin"
            android:id="@+id/include3"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="533dp"
            app:layout_constraintTop_toBottomOf="@+id/include3">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <EditText
                    android:layout_marginTop="5dp"
                    android:paddingStart="10dp"
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:inputType="textEmailAddress"/>

            <EditText
                    android:paddingStart="10dp"
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="Password"
                    android:inputType="textPassword"/>


            <TextView
                    android:gravity="center|start"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/text_sigein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Public Informarion"
                    android:textSize="24dp"
                    android:paddingStart="5dp"/>

            <EditText
                    android:paddingStart="10dp"
                    android:id="@+id/et_surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Surname"/>

            <EditText
                    android:paddingStart="10dp"
                    android:id="@+id/et_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="FacebookName"/>

            <EditText
                    android:paddingStart="10dp"
                    android:id="@+id/et_tele"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="TelephonNumber"
                    android:inputType="phone|number"/>

            <TextView
                    android:gravity="center|start"
                    android:background="@drawable/text_sigein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="24dp"
                    android:paddingStart="5dp"
                    />

            <EditText
                    android:paddingStart="10dp"
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textAutoComplete"
                    android:hint="AddressDetail"/>

            <EditText
                    android:paddingStart="10dp"
                    android:id="@+id/et_District"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textAutoComplete"
                    android:hint="District"/>

            <EditText
                    android:paddingStart="10dp"
                    android:id="@+id/et_provice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Provice"
                    android:inputType="textAutoComplete"/>

            <EditText
                    android:paddingStart="10dp"
                    android:id="@+id/et_zipCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Zip Code"
                    android:inputType="number"/>


            <TextView

                    android:gravity="center|start"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/text_sigein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Private Information"
                    android:textSize="24dp"
                    android:paddingStart="5dp"/>

            <EditText
                    android:paddingStart="10dp"
                    android:id="@+id/et_idCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ID Card"
                    android:inputType="numberDecimal"/>

            <Button
                    android:background="@drawable/button"
                    android:id="@+id/bt_signUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:text="SIGN UP"/>

        </LinearLayout>

    </ScrollView>



</android.support.constraint.ConstraintLayout>