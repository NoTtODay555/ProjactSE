<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/gray_divider"
                tools:layout_editor_absoluteX="0dp"
                tools:ignore="MissingConstraints"
                android:id="@+id/view7"
                app:layout_constraintTop_toBottomOf="@+id/include6"/>

        <include
                layout="@layout/item_crad"
                tools:layout_editor_absoluteX="0dp"
                app:layout_constraintTop_toBottomOf="@+id/view7"
                tools:ignore="IncludeLayoutParam,MissingConstraints"
                android:id="@+id/include7"
                android:layout_height="115dp"/>

        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/gray_divider"
                tools:layout_editor_absoluteX="0dp"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@+id/include7"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Exchange Request"
                android:textStyle="bold"/>
        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/gray_divider"
                tools:layout_editor_absoluteX="0dp"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@+id/include7"
                />
        <include
                layout="@layout/item_crad"
                tools:layout_editor_absoluteX="0dp"
                app:layout_constraintTop_toBottomOf="@+id/view7"
                tools:ignore="IncludeLayoutParam,MissingConstraints"
                android:id="@+id/include8"
                android:layout_height="115dp"/>
        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/gray_divider"
                tools:layout_editor_absoluteX="0dp"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@+id/include7"
                />

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount : "
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="28dp"
                    android:id="@+id/textView11"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX Baht"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@+id/textView11"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/textView12"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From : "
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView11"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="28dp"
                    android:id="@+id/textView13"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanathipat Parnkhachen"
                    app:layout_constraintTop_toBottomOf="@+id/textView12"
                    app:layout_constraintStart_toEndOf="@+id/textView13"
                    android:layout_marginTop="4dp"
                    android:id="@+id/textView14"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contect : "
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView13"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="28dp"
                    android:id="@+id/textView15"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX - XXX - XXXX"
                    app:layout_constraintTop_toBottomOf="@+id/textView14"
                    app:layout_constraintStart_toEndOf="@+id/textView15"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/gray_divider"
                tools:layout_editor_absoluteX="0dp"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@+id/include7"
                />
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount : "
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="28dp"
                    android:id="@+id/textView12_1"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX Baht"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@+id/textView12_1"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/textView13_1"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From : "
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView13_1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="28dp"
                    android:id="@+id/textView14_1"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pattarapan Mongkolpan"
                    app:layout_constraintTop_toBottomOf="@+id/textView13_1"
                    app:layout_constraintStart_toEndOf="@+id/textView14_1"
                    android:layout_marginTop="4dp"
                    android:id="@+id/textView15_1"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contect : "
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView14_1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="28dp"
                    android:id="@+id/textView16"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX - XXX - XXXX"
                    app:layout_constraintTop_toBottomOf="@+id/textView15_1"
                    app:layout_constraintStart_toEndOf="@+id/textView16"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/gray_divider"
                tools:layout_editor_absoluteX="0dp"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@+id/include7"
                />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>